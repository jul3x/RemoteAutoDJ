<?xml version="1.0" encoding="UTF-8"?>
<MixxxControllerPreset schemaVersion="1">
  <info>
    <name>WebRemote AutoDJ</name>
    <author>You</author>
    <description>Web remote</description>
  </info>

  <controller id="webremote_autodj">
    <controls>
      <!-- Note 60 = transition now -->
      <control>
        <group>[AutoDJ]</group>
        <key>fade_now</key>
        <status>0x90</status>
        <midino>0x3C</midino>
        <options><button/></options>
      </control>

      <!-- Note 61 = skip next track -->
      <control>
        <group>[AutoDJ]</group>
        <key>skip_next</key>
        <status>0x90</status>
        <midino>0x3D</midino>
        <options><button/></options>
      </control>

      <!-- Note 62 = forward -->
      <control>
        <group>[Channel1]</group>
        <key>beatjump_forward</key>
        <status>0x90</status>
        <midino>0x3E</midino>
        <options><button/></options>
      </control>
      
      <!-- Note 63 = backward -->
      <control>
        <group>[Channel1]</group>
        <key>beatjump_backward</key>
        <status>0x90</status>
        <midino>0x3F</midino>
        <options><button/></options>
      </control>
      
      <!-- Note 64 = forward 2 -->
      <control>
        <group>[Channel2]</group>
        <key>beatjump_forward</key>
        <status>0x90</status>
        <midino>0x40</midino>
        <options><button/></options>
      </control>
      
      <!-- Note 65 = backward 2 -->
      <control>
        <group>[Channel2]</group>
        <key>beatjump_backward</key>
        <status>0x90</status>
        <midino>0x41</midino>
        <options><button/></options>
      </control>
      
      <!-- Master gain: CC 7 (0x07) on channel 1 -->
      <control>
	<group>[Master]</group>
        <key>gain</key>
        <status>0xB0</status>
        <midino>0x07</midino>
        <options>
          <normal/>
        </options>
      </control>
    </controls>
  </controller>
</MixxxControllerPreset>

